{
    "version": 2,
    "framework": "laravel",
    "buildCommand": "composer install --no-dev --optimize-autoloader && npm install --production && npm run build",
    "devCommand": "npm run dev",
    "functions": {
        "api/index.php": { 
            "runtime": "vercel-php@0.7.4",
            "memory": 3008,
            "maxDuration": 30,
            "excludeFiles": "{**/*.log,node_modules/**,vendor/**,.git/**,storage/**,bootstrap/cache/**,tests/**,resources/css/**,resources/js/**,public/img/**,*.md,docker*,dockerfile*,.env*}"
        }
    },
    "routes": [
        {
            "src": "/storage/(.*)",
            "dest": "/storage/$1"
        },
        {
            "src": "/(.+)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://yourprojectdomain.com",

        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",

        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie",

        "DB_CONNECTION": "sqlite"
    }
}